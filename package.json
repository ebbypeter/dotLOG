{
  "name": "dotlog",
  "displayName": "dotLOG",
  "description": "Automatically append timestamps to files starting with .LOG, replicating Windows Notepad's .LOG functionality",
  "version": "0.1.0",
  "publisher": "cloudfractal",
  "repository": "https://github.com/ebbypeter/dotLOG",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:log",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {},
  "scripts": {
    "vscode:prepublish": "npm run package-extension",
    "compile": "tsc -p ./",
    "compile-tests": "tsc -p ./ --outDir out",
    "watch": "tsc -watch -p ./",
    "watch-tests": "tsc -watch -p ./ --outDir out",
    "package-extension": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "package-extension-dev": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "pretest": "npm run compile-tests && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "install-package": "code --install-extension dotlog-0.0.1.vsix",
    "dev": "npm run package-extension-dev && npm run watch",
    "build": "node build.js",
    "build:dev": "node build.js --dev",
    "build:watch": "node build.js --dev --watch",
    "clean": "rimraf out *.vsix"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "esbuild": "^0.25.8",
    "eslint": "^8.28.0",
    "glob": "^8.0.0",
    "mocha": "^10.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^4.9.4"
  }
}
